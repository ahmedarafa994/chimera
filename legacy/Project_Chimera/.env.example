# Project Chimera Flask Backend Configuration
# SECURITY: Copy this file to .env and replace all placeholder values
# NEVER commit .env files to version control

# Flask Configuration
FLASK_CONFIG=development
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# SECURITY CONFIGURATION - CHANGE ALL VALUES IN PRODUCTION
# =============================================================================

# API Authentication (Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
CHIMERA_API_KEY=CHANGE_ME_GENERATE_SECURE_KEY
API_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# JWT Configuration
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_KEY

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Database Configuration
DATABASE_URL=sqlite:///chimera_logs.db

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
GOOGLE_API_KEY=CHANGE_ME_YOUR_GOOGLE_KEY
GEMINI_API_KEY=CHANGE_ME_YOUR_GEMINI_KEY
GEMINI_MODEL=gemini-2.0-flash
GOOGLE_MODEL=gemini-2.0-flash